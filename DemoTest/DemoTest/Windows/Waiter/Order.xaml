<Window x:Class="DemoTest.Windows.Waiter.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoTest.Windows.Waiter"
        mc:Ignorable="d"
        Title="Order" Height="450" Width="800" FontFamily="Comic sams ms" FontSize="24">
    <Grid>
        <ListView ItemsSource="{Binding BasketItems}" Margin="0,0,0,64">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock x:Name="totalamount"/>
        <Button Margin="0,375,0,0" Click="Button_Click">Оформить</Button>
    </Grid>
</Window>
